      return matched;
    }
    
    document.addEventListener('DOMContentLoaded', () => {
      initFilterButtons();
      
      // ç»‘å®šè¿‡æ»¤æŒ‰é’®åˆ°åˆ†é¡µåˆ·æ–°ï¼ˆä¿æŒä½ åŸæ¥çš„æ–¹å¼ï¼‰
      document.querySelectorAll('.filter-tag').forEach(tag => {
        tag.addEventListener('click', updateFilteredItems);
      });
      
      // åˆå§‹åŒ–åˆ†é¡µ
      updateFilteredItems();
      
      // åˆ†é¡µæŒ‰é’®
      document.getElementById('first-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / getItemsPerPageByLayout());
        if (currentPage !== 1 && totalPages > 0) {
          currentPage = 1;
          pageWindowStart = 1;
          showPage(currentPage);
          updatePagination();
        }
      });
      document.getElementById('prev-page').addEventListener('click', () => {
        if (currentPage > 1) {
          currentPage--;
          pageWindowStart = Math.max(1, pageWindowStart - 1);
          showPage(currentPage);
          updatePagination();
        }
      });
      document.getElementById('next-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / getItemsPerPageByLayout());
        if (currentPage < totalPages) {
          currentPage++;
          const maxStart = Math.max(1, totalPages - windowSize + 1);
          pageWindowStart = Math.min(maxStart, pageWindowStart + 1);
          showPage(currentPage);
          updatePagination();
        }
      });
      document.getElementById('last-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / getItemsPerPageByLayout());
        if (totalPages > 0 && currentPage !== totalPages) {
          currentPage = totalPages;
          pageWindowStart = Math.max(1, totalPages - windowSize + 1);
          showPage(currentPage);
          updatePagination();
        }
      });
      
      // æœç´¢åŠŸèƒ½ï¼ˆä¿æŒä¸è¿‡æ»¤è”åŠ¨ï¼‰
      const searchInput = document.getElementById('search-input');
      let searchTimeout;
      searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          const searchTerm = this.value;
          const activeFilter = document.querySelector('.filter-tag.active')?.getAttribute('data-status') || 'all';
          let results = searchAnime(searchTerm);
          if (activeFilter !== 'all') {
            results = results.filter(item => item.getAttribute('data-anime-status') === activeFilter);
          }
          const allItems = Array.from(document.querySelectorAll('[data-anime-status]'));
          allItems.forEach(item => {
            const shouldShow = results.includes(item);
            item.style.display = shouldShow ? 'block' : 'none';
            item.classList.toggle('anime-hidden', !shouldShow);
          });
          filteredItems = results;
          currentPage = 1;
          pageWindowStart = 1;
          showPage(currentPage);
          updatePagination();
        }, 300);
      });
    });
    
    // Swup é‡æ–°åˆå§‹åŒ–
    function setupSwupListeners() {
      if (window.swup) {
        window.swup.hooks.on('content:replace', function() {
          setTimeout(initFilterButtons, 150);
        });
        window.swup.hooks.on('page:view', function() {
          setTimeout(initFilterButtons, 150);
        });
        window.swup.hooks.on('animation:in:end', function() {
          setTimeout(initFilterButtons, 200);
        });
      }
    }
    
    if (typeof window !== 'undefined') {
      if (window.swup) {
        setupSwupListeners();
      } else {
        document.addEventListener('swup:enable', function() {
          setupSwupListeners();
        });
      }
    }
  </script>
