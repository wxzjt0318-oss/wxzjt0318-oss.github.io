    // æ ‡è®°ä¸ºå·²è¯»ï¼Œé¿å… TS 6133 æç¤º
    void updateFilteredItems;
    
    // æœç´¢åŠŸèƒ½
    function searchAnime(searchTerm) {
      const allItems = Array.from(document.querySelectorAll('[data-anime-status]'));
      const filteredItems = [];
      
      // å¦‚æœæœç´¢è¯ä¸ºç©ºï¼Œæ˜¾ç¤ºæ‰€æœ‰é¡¹ç›®
      if (!searchTerm.trim()) {
        allItems.forEach(item => {
          item.style.display = 'block';
          item.classList.remove('anime-hidden');
        });
        return allItems;
      }
      
      const searchTermLower = searchTerm.toLowerCase();
      
      allItems.forEach(item => {
        const title = item.getAttribute('data-anime-title') || '';
        const studio = item.getAttribute('data-anime-studio') || '';
        const genre = item.getAttribute('data-anime-genre') || '';
        const status = item.getAttribute('data-anime-status') || '';
        
        const matchesSearch = title.includes(searchTermLower) || 
                             studio.includes(searchTermLower) || 
                             genre.includes(searchTermLower) ||
                             status.includes(searchTermLower);
        
        if (matchesSearch) {
          item.style.display = 'block';
          item.classList.remove('anime-hidden');
          filteredItems.push(item);
        } else {
          item.style.display = 'none';
          item.classList.add('anime-hidden');
        }
      });
      
      return filteredItems;
    }
    
    // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
    document.addEventListener('DOMContentLoaded', () => {
      initFilterButtons();
      
      // æ·»åŠ è¿‡æ»¤æŒ‰é’®äº‹ä»¶ç›‘å¬å™¨
      document.querySelectorAll('.filter-tag').forEach(tag => {
        tag.addEventListener('click', updateFilteredItems);
      });
      
      // åˆå§‹åŒ–åˆ†é¡µ
      updateFilteredItems();
      
      // é¦–é¡µ
      document.getElementById('first-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / itemsPerPage);
        if (currentPage !== 1 && totalPages > 0) {
          currentPage = 1;
          pageWindowStart = 1;
          showPage(currentPage);
          updatePagination();
        }
      });

      // ä¸Šä¸€é¡µ
      document.getElementById('prev-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / itemsPerPage);
        if (currentPage > 1) {
          currentPage--;
          // è‹¥å½“å‰é¡µè½åœ¨çª—å£èµ·ç‚¹ä¹‹å‰ï¼Œçª—å£æ•´ä½“å‰ç§»ä¸€é¡µ
          if (currentPage < pageWindowStart && pageWindowStart > 1) {
            pageWindowStart--;
          }
          showPage(currentPage);
          updatePagination();
        }
      });
      
      // ä¸‹ä¸€é¡µ
      document.getElementById('next-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / itemsPerPage);
        if (currentPage < totalPages) {
          currentPage++;
          // è‹¥å½“å‰é¡µè¶Šè¿‡çª—å£æœ«å°¾ï¼Œçª—å£æ•´ä½“åç§»ä¸€é¡µ
          if (currentPage > (pageWindowStart + windowSize - 1) && (pageWindowStart + windowSize - 1) < totalPages) {
            pageWindowStart++;
          }
          showPage(currentPage);
          updatePagination();
        }
      });

      // å°¾é¡µ
      document.getElementById('last-page').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredItems.length / itemsPerPage);
        if (totalPages > 0 && currentPage !== totalPages) {
          currentPage = totalPages;
          pageWindowStart = Math.max(1, totalPages - windowSize + 1);
          showPage(currentPage);
          updatePagination();
        }
      });
      
      // æ·»åŠ æœç´¢åŠŸèƒ½
      const searchInput = document.getElementById('search-input');
      let searchTimeout;
      
      searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        
        // é˜²æŠ–ï¼šå»¶è¿Ÿ300msæ‰§è¡Œæœç´¢
        searchTimeout = setTimeout(() => {
          const searchTerm = this.value;
          const activeFilter = document.querySelector('.filter-tag.active').getAttribute('data-status');
          
          // æ‰§è¡Œæœç´¢
          const results = searchAnime(searchTerm);
          
          // å¦‚æœæœ‰æ¿€æ´»çš„è¿‡æ»¤å™¨ï¼Œè¿›ä¸€æ­¥è¿‡æ»¤ç»“æœ
          if (activeFilter !== 'all') {
            results.forEach(item => {
              const itemStatus = item.getAttribute('data-anime-status');
              if (itemStatus !== activeFilter) {
                item.style.display = 'none';
              }
            });
          }
          
          // æ›´æ–°åˆ†é¡µ
          filteredItems = results;
          currentPage = 1;
          pageWindowStart = 1; // æœç´¢åé‡ç½®çª—å£
          updatePagination();
        }, 300);
      });
    });
    
    // Swupé¡µé¢åˆ‡æ¢åé‡æ–°åˆå§‹åŒ–
    function setupSwupListeners() {
      if (window.swup) {
        // ä½¿ç”¨Swup hooksç›‘å¬é¡µé¢åˆ‡æ¢äº‹ä»¶
        window.swup.hooks.on('content:replace', function() {
          console.log('Swup content replaced - reinitializing filter buttons');
          setTimeout(initFilterButtons, 150);
        });
        
        window.swup.hooks.on('page:view', function() {
          console.log('Swup page view - reinitializing filter buttons');
          setTimeout(initFilterButtons, 150);
        });
        
        window.swup.hooks.on('animation:in:end', function() {
          console.log('Swup animation ended - reinitializing filter buttons');
          setTimeout(initFilterButtons, 200);
        });
      }
    }
    
    // åˆå§‹åŒ–Swupç›‘å¬å™¨
    if (typeof window !== 'undefined') {
      if (window.swup) {
        setupSwupListeners();
      } else {
        // å¦‚æœSwupå°šæœªåˆå§‹åŒ–ï¼Œç›‘å¬å¯ç”¨äº‹ä»¶
        document.addEventListener('swup:enable', function() {
          console.log('Swup enabled - setting up listeners');
          setupSwupListeners();
        });
      }
    }
