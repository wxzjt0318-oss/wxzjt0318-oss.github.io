<script>
  let twikooInit = false; // Flag to prevent multiple initializations

  const initTwikoo = async () => {
    if (twikooInit) return; // Prevent re-initialization
    twikooInit = true;

    const container = document.getElementById('twikoo');
    if (!container) {
      console.warn('Twikoo container not found.');
      return;
    }

    try {
      // Dynamically import Twikoo
      const { default: twikoo } = await import('https://cdn.jsdelivr.net/npm/twikoo@latest/dist/twikoo.es.min.js');

      twikoo.init({
        envId: "https://twikoo-api-gmgc.vercel.app/", // Your Twikoo API endpoint
        el: '#twikoo',  // The CSS selector for the comment container
        path: '/guestbook', // The unique path for this page
        lang: 'zh-CN' // Language of the comments
      });
    } catch (error) {
      console.error('Failed to initialize Twikoo:', error);
      twikooInit = false; // Reset the flag for potential retries.
      container.textContent = "Failed to load comments. Please try again later."; // Display a user-friendly message
    }
  };

  // Initialize Twikoo when the component mounts
  if (typeof window !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTwikoo);
    } else {
      initTwikoo();
    }
  }

  // Astro navigation support.  Use requestAnimationFrame and setTimeout to allow
  // Astro to render the page before Twikoo is initialized.  Also check if Twikoo
  // has already been initialized to prevent re-initialization.
  document.addEventListener('astro:page-load', () => {
    if (!twikooInit) {
      requestAnimationFrame(() => {
        setTimeout(initTwikoo, 100);
      });
    }
  });
</script>

